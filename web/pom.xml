                </excludes>
            </testResource>
        </testResources>
    </build>
    
    <profiles>
        <profile>
            <id>fitnesse</id>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>exec-maven-plugin</artifactId>
                            <executions>
