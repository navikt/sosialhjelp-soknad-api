<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
    <base href="/sendsoknad/"></base>
    {{> skjema/generisk/generisk-styling }}
</head>

<body>

<div class="header">
    <img class="header-logo" src="img/nav-logo.gif"/>
    {{#with data.personalia}}
        <span class="navn">{{navn.fornavn}} {{navn.mellomnavn}} {{navn.etternavn}}</span>
        <span class="fnr">{{personIdentifikator.verdi}}</span>
    {{/with}}
    <span class="headerSider">
        {{ hentTekst "oppsummering.sideAvTotal" }}
    </span>
</div>

<div class="footer">
    <span>
        <span>NAV 35-18.01 {{ hentTekst "oppsummering.eSoknad" }}</span>
    </span>
</div>

<div id="soknad" class="generisk-oppsummering">

    <div class="hode">
        <h1>Søknad om økonomisk sosialhjelp</h1>
        <div class="personalia">
            {{#with data.personalia}}
                <p class ="nvn">{{navn.fornavn}} {{navn.mellomnavn}} {{navn.etternavn}}</p>
                <p class ="fnr">{{personIdentifikator.verdi}}</p>
                {{#with folkeregistrertAdresse}}
                    <p class ="adr">{{gatenavn}} {{husnummer}}{{husbokstav}}, {{postnummer}} {{poststed}}</p>
                {{/with}}
                {{#if kontonummer.verdi}}
                <div>
                    <span>Kontonummer</span>:
                    <span>{{kontonummer.verdi}}</span>
                </div>
                {{/if}}
            {{/with}}
        </div>
    </div>
    <div>
        <div class="bolk js-bolk">
            <h2 class="bolk__tittel">{{ hentTekst "personopplysninger.tittel" }}</h2>
            <ul class="fakta-liste">
                {{#variabel "niva" "3"}}
                    {{#with data.personalia}}
                        {{> skjema/ny_generisk/textbox }}
                    {{/with}}
                oppholdsadresse (kommune)
                statsborgerskap
                folkeregistrertAdresse
                telefonnummer
                kontonummer
                    {{#each fakta}}
                        {{> skjema/ny_generisk/textbox }}
                        {{#if @root.utvidetSoknad}}
                            {{> skjema/generisk/customSvarAlternativer }}
                        {{/if}}
                    {{/each}}
                {{/variabel}}
                <span class="label">{{ hentTekst "personalia.kommune.label" }}</span>
                <ul class="svar-liste">
	                <li>
	                    <span class="verdi verdi--tekst">
	                        {{#with data.personalia.oppholdsadresse.type}}
	                    </span>
	                </li>
                </ul>
            </ul>
        </div>
        <div class="bolk js-bolk">
            <ul class="fakta-liste">
                {{#variabel "niva" "3"}}
                    {{#each fakta}}
                        {{> skjema/generisk/faktum }}
                        {{#if @root.utvidetSoknad}}
                            {{> skjema/generisk/customSvarAlternativer }}
                        {{/if}}
                    {{/each}}
                {{/variabel}}

                {{#hvisIngenSynligeBarneFakta fakta}}
                    {{#variabel "key" (toLowerCase navn)}}
                        {{> skjema/generisk/harikkebarn }}
                    {{/variabel}}
                {{/hvisIngenSynligeBarneFakta}}
            </ul>
        </div>
    </div>
</div>

</body>
</html>