<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <style type="text/css">
            @page   { size: A4; margin: 3.5cm 2cm 2.5cm; @top-center { content: element(header, last-except) }; @bottom-center { content: element(footer) }; }
            @page:first { margin: 1.5cm 2cm 2.5cm; }
            *       { box-sizing: border-box; }
            body    { font-family: Arial, sans-serif; font-size: 10pt; line-height: 1.4em; margin: 0; color: #3e3832; word-break: break-word; }
            h1      { font-family: Modus, Arial, sans-serif; font-size: 24pt; }
            h2, h3, h4, h5, h6 { font-family: Modus, Arial, sans-serif; font-size: 13pt; }
            table   { border-collapse: collapse; width: 170mm; margin-bottom: 10mm; }
            table ul { list-style: none; padding-left: 15px; margin-top: 0; margin-bottom: 0; }
            table ul ul { margin-left: 0; padding-left: 0; }
            table ul ul .kulepunkt {  margin-bottom: 5px; }
            table ul ul > p { font-weight: bold; }
            p.ikke-bold {font-weight: normal}
            td      { vertical-align: middle; text-align: left; padding: 0; font-size: 10pt; }
            td:first-child { width: 3.5mm; vertical-align: top; }
            td:last-child { width: 166.5mm; padding-bottom: 5px; padding-left: 10px; }
            h2 { page-break-after: avoid; }
            li p { margin-left: 2.55mm; margin-top: 0.5mm; padding-top: 0; margin-bottom: 0; padding-bottom: 0; }
            ul > p { margin-top: 2.55mm; margin-bottom: 6px; }
            .header { position: running(header); text-align: center; margin-bottom: 1cm; }
            .header span { font-family: Modus, Arial, sans-serif; display: inline-block; }
            .header .header-logo { position: absolute; left: 0; top: 8mm; width: 14mm; }
            .header .fnr:before { content: "&#8226;"; margin: 0 10px; }
            .header .headerSider { position: absolute; right: 0; }
            .header .headerSider:before { content: counter(page); }
            .header .headerSider:after { content: counter(pages); }
            .footer { position: running(footer); font-size: 8pt; text-align: center; border-top: .2pt solid #ccc; padding-top: 0.5cm }
            .footer span { display: inline-block; margin: 0 10px; }
            .logo      { position: absolute; left: 77mm; top: 0; width: 17mm; }
            .sjekket   { display: inline-block; background: url(img/hake_sort.gif) no-repeat center bottom; width: 10px; height: 12px; background-size: 8px; }
            .usjekket  { display: inline-block; background: url(img/minus_sort.gif) no-repeat center; width: 10px; height: 10px; }
            .hode      { text-align: center; margin: 15mm 0 9.5mm; padding-bottom: 9.5mm; border-bottom: .2pt solid #ccc; }
            .hode hr   { border: none; border-top: .2pt solid #ccc; width: 8mm; margin: 7mm auto 5mm; }
            .hode .nvn, .hode .fnr { font-family: Modus, Arial, sans-serif; font-weight: bold; font-size: 13pt; }
            .hode .adr { margin-top: 2mm; }
            .stor { text-transform: uppercase; font-size: 1rem; }
            .arbeidsforhold-data { margin-top: 0; }
            .arbeidsforhold-data .arbeidsforhold-varighet { font-size: 8pt; padding-bottom: 0; list-style-type: none; padding-left: 0; }
            .barn-navn { font-weight: bold; }
            .kulepunkt:before { content: "â€¢"; font-size: 14pt; position: relative; top: -1px; vertical-align: top; }
            .brosjyre-signatur { border-top: .2pt solid #ccc; margin-top: 10mm; padding-top: 10mm; page-break-inside: avoid; }
            .arbeidsforhold { margin-top: 7px; }
            table.arbeidsforhold { margin-bottom: 0; }
            .overskrift, .arbeidsforhold-arbeidsgiver { font-weight: bold; display: block; }
            .permitteringsperiode { display: inline-block; margin-bottom: 5px; }
            .rotasjonturnus { display: inline-block; margin-left: 15px; }
            .rotasjonturnus.span { margin: 0; padding: 0; }
            .vedlegg .container{ margin-bottom: 10px; padding: 0; }
            .vedlegg .lastetOpp .vedleggSymbol { display: none; }
            .vedlegg .lastetOpp a { font-size: 0.85rem; }
            .vedlegg .aarsak { font-weight: normal; }
            .vedlegg .status { margin-right: 5px; }
            .vedlegg .tittel { font-weight: bold; }
            .vedlegg .seVedlegg { display: none; }
            .vedlegg p { margin: 0; }
            .personalia p { margin: 0; }
            .arbeidsidensist-container table {margin-bottom: 0}
            .arbeidsidensist-container {margin-bottom: 10mm}
        </style>
    </head>
    <body>
        <div class="header">
            <img class="header-logo" src="img/nav-logo.gif"/>
            {{#forFaktum "personalia"}}
                <span class="navn">{{properties.navn}}</span>
                <span class="fnr">{{properties.fnr}}</span>
            {{/forFaktum}}
            <span class="headerSider">
                {{ hentTekst "oppsummering.sideAvTotal" }}
            </span>
        </div>

        <div class="footer">
            <span>
                <span>{{ hentSkjemanummer }} {{ hentTekst "oppsummering.eSoknad" }}</span>
                <span>|</span>
                <span>{{ hentTekst "oppsummering.fastsattDato" }}</span>
            </span>
        </div>

        <div id="soknad">
            <img class="logo" src="img/nav-logo.gif"/>
            <div class="hode">
                {{> skjema/aap/tittel }}
                {{> skjema/aap/personalia }}
            </div>

            {{#block "content" }}{{/block}}

            {{> skjema/felles/vedlegg }}

             <div class="brosjyre-signatur">
                <table >
                    <tr>
                        <td>
                            <span class="sjekket"></span>
                        </td>
                        <td>
                            {{ hentTekst "oppsummering.bekreftOpplysninger" }}
                        </td>
                    </tr>
                </table>
            </div>

        </div>
    </body>
</html>