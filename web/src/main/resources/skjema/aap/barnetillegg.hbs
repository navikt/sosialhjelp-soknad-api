<h2>{{ hentTekst "barnetillegg.tittel" }}</h2>
<table>
    {{#forFakta "barn"}}
        <tr>
            <td class="sjekket"></td>
            <td>
                <p>
                    <span class="barn-navn">{{ properties.sammensattnavn }},</span>
                    <span>{{ hentTekst "oppsummering.fodt" }}</span>
                    {{#hvisLik type "SYSTEMREGISTRERT"}}
                        <span>{{ formatterFodelsDato properties.fnr }},</span>
                    {{ else }}
                        <span>{{ formatterFodelsDato properties.fodselsdato }},</span>
                    {{/hvisLik}}

                    <span>{{ hentTekst "oppsummering.bor" }}</span>
                    <span>{{ hentLand properties.land }}</span>
                </p>

                <div class="kulepunkt">
                    {{#harBarnetInntekt}}
                        <span>{{ hentTekst "barnetillegg.barn.harInntekt"}}. </span>
                        <span>{{ hentTekst "barnetillegg.inntekt.oppsummering.prefix"}} {{value}} kr</span>
                    {{else}}
                        <span>{{ hentTekst "barnetillegg.barn.harIkkeInntekt"}}</span>
                    {{/harBarnetInntekt}}
                </div>
            </td>
        </tr>
    {{/forFakta}}
</table>