<h2>{{ hentTekst "oppsummering.vedlegg.tittel" }}</h2>
<table class="vedlegg">
    {{#forVedlegg}}
        <tr>
            {{#hvisLik innsendingsvalg "LastetOpp"}}
                <td class="sjekket"></td>
            {{else}}
                <td class="usjekket"></td>
            {{/hvisLik}}
            <td>
                <span>{{ tittel }}</span>

                {{#if navn}}
                    <span>: {{ navn }}</span>
                {{/if}}
            </td>
            <td class="vedleggStatus">
                <span>
                    {{#hvisLik innsendingsvalg "LastetOpp"}}
                        <span class="lastetOpp">
                            <span class="antallSider">
                                <span class="vedlegg"></span>
                                <span>{{ antallSider }}</span>
                                {{#hvisLik antallSider "1"}}
                                    <span>{{ hentTekst "oppsummering.side" }}</span>
                                {{ else }}
                                    <span>{{ hentTekst "oppsummering.sider" }}</span>
                                {{/hvisLik}}

                            </span>
                            <a href="#{{ brukerBehandlingId }}/visVedlegg/{{ vedleggId }}" class="seVedlegg">{{ hentTekst "oppsummering.seVedlegg" }}</a>
                        </span>
                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "SendesSenere"}}
                        <span>{{ hentTekst "oppsummering.sendesSenere" }}</span>
                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "SendesIkke"}}
                        <span>{{ hentTekst "oppsummering.sendesIkkeSendesAvAndre" }}</span>
                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "VedleggSendesIkke"}}
                        <span>{{ hentTekst "oppsummering.sendesIkke" }}</span>
                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "VedleggSendesAvAndre"}}
                        <span>{{ hentTekst "oppsummering.sendesAvAndre" }}</span>
                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "VedleggAlleredeSendt"}}
                        <span>{{ hentTekst "oppsummering.vedleggAlleredeSendt" }}</span>
                    {{/hvisLik}}
                </span>
            </td>
        </tr>
    {{ else }}
        <tr class="ingenVedleggTekst">
            <td class="sjekket"></td>
            <td >
                <span>{{ hentTekst "oppsummering.vedlegg.ingen" }}</span>
            </td>
        </tr>
    {{/forVedlegg}}
</table>