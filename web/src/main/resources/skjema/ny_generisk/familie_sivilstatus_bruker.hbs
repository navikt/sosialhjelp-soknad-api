<h3>{{ hentTekst "familie.sivilstatus.sporsmal" }}</h3>
<li>
    <ul class="svar-liste">
        <li>
            {{#if sivilstatus.status}}
                <span class="verdi verdi--tekst">
                    {{ hentTekst (concat 'familie.sivilstatus.' sivilstatus.status) }}
                </span>
            {{else}}
                <span class="verdi verdi--ikkeUtfylt">
                    <i>{{ hentTekst 'oppsummering.ikkeutfylt' }}</i>
                </span>
            {{/if}}
        </li>
        {{#if @root.utvidetSoknad}}
            {{{hentSvaralternativer "familie.sivilstatus"}}}
        {{/if}}
    </ul>
</li>
