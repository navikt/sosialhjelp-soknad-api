<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        {{> skjema/felles/styling }}
        <style type="text/css">
            table.perioder td { padding: 5px; padding-bottom: 5px !important; }
            table.perioder th { text-align: left; }
            table.perioder th:last-child { padding-left: 10px; }
            table.perioder th:first-child { padding-left: 5px; }
        </style>
    </head>
    <body>

        <div class="header">
            <img class="header-logo" src="img/nav-logo.gif"/>
            {{#forFaktum "personalia"}}
                <span class="navn">{{properties.navn}}</span>
                <span class="fnr">{{properties.fnr}}</span>
            {{/forFaktum}}
            <span class="headerSider">
                {{ hentTekst "oppsummering.sideAvTotal" }}
            </span>
        </div>

        <div class="footer">
            <span>
                <span>{{ hentSkjemanummer }} {{ hentTekst "oppsummering.eSoknad" }}</span>
                <span>|</span>
                <span>{{ hentTekst "oppsummering.fastsattDato" }}</span>
            </span>
        </div>

        <div id="soknad">
            <img class="logo" src="img/nav-logo.gif"/>
            <div class="hode">
                {{> skjema/foreldresoknad/tittel }}
                {{> skjema/foreldresoknad/personalia }}
            </div>

            {{#forFaktum "soknadsvalg.stonadstype"}}

                {{#hvisLik "foreldrepengerFar" value}}
                    {{#block "contentforeldrepengerFar" }}{{/block}}
                {{/hvisLik}}

                {{#hvisLik "engangsstonadFar" value}}
                    {{#block "contentEngangsstonadFar" }}{{/block}}
                {{/hvisLik}}

                {{#hvisLik "foreldrepengerMor" value}}
                    {{#block "contentForeldrepengerMor" }}{{/block}}
                {{/hvisLik}}

                {{#hvisLik "engangsstonadMor" value}}
                    {{#block "contentEngangsstonadMor" }}{{/block}}
                {{/hvisLik}}

                {{#hvisLik "overforing" value}}
                    {{#block "contentOverforingFedrekvote" }}{{/block}}
                {{/hvisLik}}

            {{/forFaktum}}

            {{> skjema/felles/vedlegg }}


            <div class="brosjyre-signatur">
                <table >
                    <tr>
                        <td>
                            <span class="sjekket"></span>
                        </td>
                        <td>
                            {{{ hentTekst "oppsummering.bekreftOpplysninger" }}}
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </body>
</html>
