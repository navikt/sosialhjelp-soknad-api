<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>no.nav.sbl.dialogarena.soknadinnsending.web.TestApplicationContext</param-value>
    </context-param>

    <session-config>
        <session-timeout>60</session-timeout>
        <cookie-config>
            <name>SENDSOKNAD_JSESSIONID</name>
            <http-only>true</http-only>
            <secure>false</secure>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <servlet>
        <servlet-name>livebeans</servlet-name>
        <servlet-class>org.springframework.web.context.support.LiveBeansViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>livebeans</servlet-name>
        <url-pattern>/livebeans</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>devResources</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextClass</param-name>
            <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
        </init-param>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>no.nav.sbl.dialogarena.soknadinnsending.web.ResourceServlet</param-value>
        </init-param>

    </servlet>
    <servlet-mapping>
        <servlet-name>devResources</servlet-name>
        <url-pattern>/dev/*</url-pattern>
    </servlet-mapping>

</web-app>