<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <property name="loggingPattern" value="%d [%-5level] [%thread] %logger{5} %replace(- [%X{consumerId}, %X{callId}, %X{userId}] ){'- \[, , \] ',''}- %m%n"/>


    <appender name="exceptionlog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${APP_LOG_HOME}/sendsoknad_error.log</File>
        <encoder>
            <pattern>${loggingPattern}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <maxHistory>90</maxHistory>
            <FileNamePattern>${APP_LOG_HOME}/sendsoknad-error-%d{yyyy-MM-dd}.gz</FileNamePattern>
        </rollingPolicy>
    </appender>

    <appender name="infolog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${APP_LOG_HOME}/sendsoknad.log</File>
        <encoder>
            <pattern>${loggingPattern}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <maxHistory>90</maxHistory>
            <FileNamePattern>${APP_LOG_HOME}/sendsoknad-info-%d{yyyy-MM-dd}.gz</FileNamePattern>
        </rollingPolicy>
    </appender>

    <appender name="batchlog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${APP_LOG_HOME}/sendsoknad-batch.log</File>
        <encoder>
            <pattern>${loggingPattern}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <maxHistory>90</maxHistory>
            <FileNamePattern>${APP_LOG_HOME}/sendsoknad-batch-log-%d{yyyy-MM-dd}.gz</FileNamePattern>
        </rollingPolicy>
    </appender>

    <logger name="org.apache.wicket.util.tester.BaseWicketTester" level="info">
        <appender-ref ref="infolog"/>
    </logger>

    <logger name="org.apache.wicket" level="error">
        <appender-ref ref="exceptionlog"/>
    </logger>

    <logger name="org.springframework" level="warn">
        <appender-ref ref="exceptionlog"/>
    </logger>

    <logger name="no.nav.modig.lang.reflect" level="warn">
        <appender-ref ref="exceptionlog"/>
    </logger>

    <logger name="no.nav.sbl" level="info">
        <appender-ref ref="exceptionlog"/>
    </logger>

    <logger name="org.apache.cxf" level="info">
        <appender-ref ref="infolog"/>
    </logger>

    <logger name="org.apache.pdfbox" level="error">
        <appender-ref ref="exceptionlog"/>
    </logger>

    <logger name="no.nav.sbl.dialogarena.soknadinnsending.business.batch.LagringsScheduler" level="info">
        <appender-ref ref="batchlog"/>
    </logger>

    <root level="${ROOT_LOG_LEVEL:-INFO}">
        <appender-ref ref="exceptionlog"/>
        <appender-ref ref="infolog"/>
    </root>

</configuration>