<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <session-config>
        <session-timeout>60</session-timeout>
        <cookie-config>
            <name>SENDSOKNAD_JSESSIONID</name>
            <http-only>true</http-only>
            <secure>false</secure>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>no.nav.sosialhjelp.soknad.web.config.SoknadinnsendingConfig,no.nav.sosialhjelp.soknad.web.config.SoknadinnsendingLocalConfig, no.nav.sosialhjelp.soknad.web.oidc.OidcConfig</param-value>
    </context-param>

    <servlet>
        <servlet-name>SoknadAPI</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>no.nav.sosialhjelp.soknad.web.config.TestSoknadApplication</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>SoknadAPI</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>livebeans</servlet-name>
        <servlet-class>org.springframework.web.context.support.LiveBeansViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>livebeans</servlet-name>
        <url-pattern>/livebeans</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>OpenAmLoginFilter</filter-name>
        <filter-class>no.nav.sosialhjelp.soknad.web.saml.FakeLoginFilter</filter-class>
        <init-param>
            <param-name>defaultFnr</param-name>
            <param-value>11111111111</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>OpenAmLoginFilter</filter-name>
        <url-pattern>/metadata/*</url-pattern>
    </filter-mapping>

</web-app>